<h3> User List </h3>

<div class="hero-unit">
	<ul>
		<% @users.each do |user| %>
			<li> 
				<% if user.first_name %>
					<% if user.last_name %>
						<%= link_to(user.first_name + ' ' + user.last_name, '#') %>
					<% else %>
						<%= link_to('#{user.first_name}', '#') %> 
					<% end %>
				<% else %>
					<%= link_to(user.email, '#') %>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>