<div class="container">
  <div class="hero-unit">
    <h3>Listing</h3>

    <table>
      <thead>
        <tr>
          <th>Amount</th>
          <th>Reason</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @debts.each do |debt| %>
          <tr>
            <td><%= debt.amount %></td>
            <td><%= debt.reason %></td>
            <td><%= link_to('Show', {:controller => 'debts', :action => 'show', :id => debt.id}) %></td>
            <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
            <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Debt', new_debt_path %>
  </div>
</div>
